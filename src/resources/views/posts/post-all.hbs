<div class="row all-post-area p-0 m-0">
    <div class = "d-block ps-5 pe-5 mb-3 mt-3 bg-gray">

        <h4 class="mb-3 mt-3">
            Tất cả bài viết
        </h4>

    </div>

    <div class = "row post-area d-block ps-5 pe-5 container-fluid">
        <script>
            var postTime = [];
        </script>
        {{#each all_post}}
            <div class="col-12 col-md-8 p-0">
                <div class="single-blog-post style-1 mb-30 animated fadeInUpBig">
                    <div class="blog-thumbnail bg-overlay">
                        {{#if (equal this.image_url '')}}
                            <a>
                                <img class="" src="/img/default/thumbnail.png" alt="">
                            </a>
                        {{else}}
                            <a>
                                <img class="" src="{{this.image_url}}" alt="">
                            </a>
                        {{/if}}
                    </div>
                    
                        {{!-- <a href = "/post/{{this.slug}}" > --}}
                            {{!-- <h4 class="all-single-title"> --}}
                                {{!-- {{this.title}} --}}
                            {{!-- </h4> --}}
                            {{!-- <p class = "post-des"> --}}
                                {{!-- {{this.description}} --}}
                            {{!-- </p> --}}
                        {{!-- </a> --}}
                       
                    <div class="blog-content pe-3">
                        <a href="#" class="post-title d-block" >{{this.title}}</a>
                        <p class="post-des d-none d-sm-block">{{this.description}}</p>
                        <span class="post-date"></span>
                        <script>
                            postTime.push("{{this.createdAt}}");
                        </script>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
<script>
    for (element in postTime){
        displayTime("post-date", postTime);
    }
</script>