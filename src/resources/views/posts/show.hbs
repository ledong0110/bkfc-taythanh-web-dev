<!-- ##### Breaking News Area Start ##### -->
<section class="breaking-news-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Breaking News Widget -->
                <div class="breaking-news-ticker d-flex flex-wrap align-items-center">
                    <div class="title pe-auto ps-auto">
                        <h6>Bài viết mới</h6>
                    </div>
                    <div id="breakingNewsTicker" class="ticker">
                        <ul>
                            {{log breaking_post}}
                            {{#each breaking_post}}
                            <li>
                                <a href="/post/{{this.slug}}">
                                    {{this.title}}
                                </a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ##### Breaking News Area End ##### -->

<!-- ##### Post Details Title Area Start ##### -->
<script>
    var postTime = [];
    postTime.push("{{post.createdAt}}")
</script>

{{#if (equal post.image_url '')}}
    <div class="post-details-title-area bg-overlay clearfix" style="background-image: url(/img/default/thumbnail.png)">
{{else}}
    <div class="post-details-title-area bg-overlay clearfix" style="background-image: url({{post.image_url}})">
{{/if}}

    <div class="container-fluid h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12 col-lg-8">
                <!-- Post Content -->
                <div class="post-content">
                    <p class="tag"><span>Bài viết</span></p>
                    <p class="post-title">{{post.title}}</p>
                    <div class="d-flex align-items-center">
                        <span class="post-date mr-30"></span>
                        <span class="author-detail">Được đăng bởi {{post.author.name}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- ##### Post Details Title Area End ##### -->

